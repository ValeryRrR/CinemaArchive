<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView_1"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/film_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_name"
            app:srcCompat="@drawable/union_of_safety" />

        <TextView
            android:id="@+id/textView_name"
            style="@style/mHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spies_in_disgues"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView_description"
            style="@style/mTextDescriptionStyle"
            android:layout_width="223dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/button_detail"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="When the world's best spy is turned into a pigeon, he must rely on his nerdy tech officer to save the world."
            android:text="When the world's best spy is turned into a pigeon, he must rely on his nerdy tech officer to save the world." />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/film_2_album"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/spies_in_disgues" />

        <TextView
            android:id="@+id/textView_name_2"
            style="@style/mHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/union_of_safety"
            app:layout_constraintStart_toStartOf="@+id/imageView_1"
            app:layout_constraintTop_toBottomOf="@+id/imageView_1" />

        <Button
            android:id="@+id/button_detail_2"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:text="@string/detail"
            app:layout_constraintBottom_toBottomOf="@+id/textView_name_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_name_2" />

        <Button
            android:id="@+id/button_detail"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:text="@string/detail"
            app:layout_constraintBottom_toBottomOf="@+id/textView_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_name" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="240dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
